@using Test.BOL;
@{
    ViewData["Title"] = "Index Page";
}
<div>
    <h2>Product Details</h2>
    @{
        Product p=(Product)ViewData["products"];
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Brand</th>
                <th></th>
                
            </tr>
            <tbody>
               
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Pname</td>
                    <td>@p.Price</td>
                    <td>@p.Pbrand</td>
                     <td><a href="/product/delete/@p.Id"><button class="btn btn-warning">Delete</button></a></td>

                </tr>
            </tbody>
        </table>
    }
</div>